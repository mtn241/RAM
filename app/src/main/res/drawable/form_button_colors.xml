<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/task_form_time"
                android:centerColor="@color/main_activity"
                android:endColor="@color/task_form_time"
                android:angle="270"
                />
            <stroke
                android:width="3dp"
                android:color="@color/main_activity" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/task_form_time"/>
            <stroke
                android:width="1dp"
                android:color="@color/black" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

</selector>
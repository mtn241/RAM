<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="app_button_default_style" >
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/form_button_colors</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="app_font_size_small">
        <item name="android:textSize">15dp</item>
    </style>
    <style name="spinner_time_style">
        <item name="android:textSize">17dp</item>
        <item name="android:background">@drawable/deadline_spinner_background</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="spinner_time_picked_style">
        <item name="android:textSize">18dp</item>
        <item name="android:background">@drawable/deadline_spinner_background</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>